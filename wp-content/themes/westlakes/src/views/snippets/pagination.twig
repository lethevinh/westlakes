{% if posts.pagination.pages | length %}
<ul class="pagination pagination-transparent pagination-rounded">

    {# First #}
    {% if posts.pagination.pages|first and posts.pagination.pages|first.current != true %}
        <li class="page-item first">
            <a class="page-link" href="{{ posts.pagination.pages|first.link }}">First</a>
        </li>
    {% else %}
        <li class="page-item first disabled">
            <a class="page-link" disabled>First</a>
        </li>
    {% endif %}

    {# Previous #}
    {% if posts.pagination.prev %}
        <li class="page-item prev">
            <a class="page-link" href="{{ posts.pagination.prev.link }}">Previous</a>
        </li>
    {% else %}
        <li class="page-item prev disabled">
            <a class="page-link" disabled>Previous</a>
        </li>
    {% endif %}

    {# Pages #}
    {% for page in posts.pagination.pages %}
        {% if page.link %}
            <li class="page-item">
                <a href="{{ page.link }}" class="page-link {{ page.class }}">{{ page.title }}</a>
            </li>
        {% else %}
            <li class="page-item active current">
                <span class="page-link {{ page.class }}">{{ page.title }}</span>
            </li>
        {% endif %}
    {% endfor %}

    {# Next #}
    {% if posts.pagination.next %}
        <li class="page-item next">
            <a class="page-link" href="{{ posts.pagination.next.link }}">Next</a>
        </li>
    {% else %}
        <li class="page-item next disabled">
            <a class="page-link" disabled>Next</a>
        </li>
    {% endif %}

    {# Last #}
    {% if posts.pagination.pages|last and posts.pagination.pages|last.current != true %}
        <li class="page-item last">
            <a class="page-link" href="{{ posts.pagination.pages|last.link }}">Last</a>
        </li>
    {% else %}
        <li class="page-item last disabled">
            <a class="page-link" disabled>Last</a>
        </li>
    {% endif %}
</ul>
{% endif %}