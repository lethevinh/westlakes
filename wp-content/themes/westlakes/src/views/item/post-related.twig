<article class="post-style-vertical">
    <div class="post-thumbnail">
        <a href="{{ post.link }}">
            <img class="lazy img-fluid" src="{{theme_url()}}/assets/images/dot.jpg" data-src="{{ post.thumbnail.src | resize(416,235) }}" alt="{{ post.title }}">
        </a>
    </div>
    <div class="post-info">
        <h3 class="post-title">
            <a href="{{ post.link }}">
                {{ post.title }}
            </a>
        </h3>
    </div>
</article>