{% for item in items %}
    <li class="{{ item.classes | join(' ') }}">
        <a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
        {% if item.children %}
            <ul class="sub-menu">
                {% include ['item/menu-'~name~'.twig', "item/menu.twig"] with {'items': item.children} %}
            </ul>
        {% endif %}
    </li>
{% endfor %}
